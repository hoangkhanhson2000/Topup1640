
@model WebApplication4.Models.Magazine

@{
    ViewBag.Title = "Details";
}
@{

    var comments = (IEnumerable<WebApplication4.Models.ArticlesComment>)ViewBag.Comments;

}

<h2>Details</h2>

<div>
    <h4>Magazine</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Createby)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Createby)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Topic.TopicName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Topic.TopicName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MagazineName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MagazineName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MagazinePostDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MagazinePostDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FileDetails)
        </dt>
        <dd class="editor-field">


            <ul style="">
                @foreach (var item in Model.FileDetails)
                {
                    <li>
                        <a class="" style="color:black" href="/Magazine/Download/?p=@(item.Id + item.Extension)&d=@item.FileName">@item.FileName</a>
                    </li>

                }
            </ul>
        </dd>
    </dl>
</div>
<hr>
<h1> Comment</h1>
@foreach (var c in comments)

{

    <hr>
    <div class="row">

        <div class="col-md-3">
            <i>Comment By:</i>
            <i>@c.CommentBy</i>
        </div>
        <div class="col-md-3">
            <i>Comment:</i>
            @Html.Raw(c.Comment.Replace("\n", "<br />"))
        </div>
        <div class="col-md-3">
            <i>Comment Date:</i>
            <i>@c.CommentOn</i>
        </div>


    </div>
}
<hr />
@if (User.IsInRole("Marketing Coordinator"))
{
    @Html.Partial("CommentBox")}
@if (User.IsInRole("Student"))
{
    @Html.Partial("CommentBox")}
<p>



</p>





