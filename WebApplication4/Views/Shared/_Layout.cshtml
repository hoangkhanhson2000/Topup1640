<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Style.css/Login.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:seashell">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>


                </button>
                <img src="~/image/logo.png" alt="logo" width="50" height="50">


            </div>
            <div class="navbar-collapse collapse">

                @Html.ActionLink("Blog6SIX", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">

                    @if (User.IsInRole("Admin"))
                    {

                        <li>@Html.ActionLink("Role", "Index", "Role")</li>
                        <li>@Html.ActionLink("Add Account", "Register", "Account")</li>
                    }



                    @if (User.IsInRole("Student"))
                    {

                        <li>@Html.ActionLink("Add File", "Create", "Magazine")</li>

                    }
                   
                    <li>@Html.ActionLink("Topic", "Index", "Topics")</li>
                    <li>@Html.ActionLink("Article", "Article", "Magazine")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Team6SIX ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
